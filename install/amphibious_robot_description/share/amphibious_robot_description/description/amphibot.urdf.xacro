<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="amphibot">


   <material name="white">
       <color rgba="1 1 1 1" />
   </material>
   <material name="black">
       <color rgba="0 0 0 1" />
   </material>
   <material name="blue">
       <color rgba=".2 .2 1 1" />
   </material>

 <!-- Robot-wide properties -->
 <xacro:property name="mesh_path" value="package://amphibious_robot_description/meshes"/>
 <xacro:property name="scale_mm_to_m" value="0.001"/>


 <!-- Body -->
 <link name="base_link">
   <visual>
     <geometry>
       <mesh filename="${mesh_path}/body.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="white"/>
   </visual>
   <collision>
     <geometry>
       <mesh filename="${mesh_path}/body.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="white"/>
   </collision>
   <inertial>
     <mass value="1.5"/>
     <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
   </inertial>
 </link>




 <!--right shaft-->
 <link name="rshaft_link">
   <visual>
     <geometry>
       <mesh filename="${mesh_path}/rshaft.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="blue"/>
   </visual>
   <collision>
     <geometry>
       <mesh filename="${mesh_path}/shaft.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="blue"/>
   </collision>
   <inertial>
     <mass value="0.2"/>
     <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
   </inertial>
 </link>


 <joint name="rshaft_joint" type="fixed">
   <parent link="base_link"/>
   <child link="rshaft_link"/>
   <origin xyz=".36 0.005  -.115" rpy="0 -1.5708 0" />
 </joint>

<!--left shaft-->
 <link name="lshaft_link">
   <visual>
     <geometry>
       <mesh filename="${mesh_path}/shaft.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="blue"/>
   </visual>
   <collision>
     <geometry>
       <mesh filename="${mesh_path}/lshaft.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="blue"/>
   </collision>
   <inertial>
     <mass value="0.2"/>
     <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
   </inertial>
 </link>


 <joint name="lshaft_joint" type="fixed">
   <parent link="base_link"/>
   <child link="lshaft_link"/>
   <origin xyz=".36 0.355 -.115" rpy="0 -1.5708 0" />
 </joint>

 <!-- Left Wheel -->
 <link name="left_wheel_link">
   <visual>
     <geometry>
       <mesh filename="${mesh_path}/left_wheel.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="black"/>
   </visual>
   <collision>
     <geometry>
       <mesh filename="${mesh_path}/left_wheel.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="black"/>
   </collision>
   <inertial>
     <mass value="0.3"/>
     <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
   </inertial>
 </link>


 <joint name="left_wheel_joint" type="continuous">
   <parent link="lshaft_link"/>
   <child link="left_wheel_link"/>
   <origin xyz="0 0 .05" rpy="0 0 0" />
   <axis xyz="0 1 0"/>
 </joint>


 <!-- Right Wheel -->
 <link name="right_wheel_link">
   <visual>
     <geometry>
       <mesh filename="${mesh_path}/right_wheel.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="black"/>
   </visual>
   <collision>
     <geometry>
       <mesh filename="${mesh_path}/right_wheel.stl" scale="${scale_mm_to_m} ${scale_mm_to_m} ${scale_mm_to_m}"/>
     </geometry>
     <material name="black"/>
   </collision>
   <inertial>
     <mass value="0.3"/>
     <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
   </inertial>
 </link>


 <joint name="right_wheel_joint" type="continuous">
   <parent link="rshaft_link"/>
   <child link="right_wheel_link"/>
   <origin xyz="0 0 .05" rpy="0 0 0" />
   <axis xyz="0 1 0"/>
 </joint>
 </robot>
